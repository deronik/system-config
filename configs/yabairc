yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config layout bsp

yabai -m config top_padding    5
yabai -m config bottom_padding 5
yabai -m config left_padding   5
yabai -m config right_padding  5
yabai -m config window_gap     5


# floating windows are always on top (default: off) bugged for modal windows
yabai -m config window_topmost off

# modify window shadows (default: on, options: on, off, float)
yabai -m config window_shadow float
yabai -m config window_border                on
yabai -m config window_border_blur           off
yabai -m config window_border_width          4
yabai -m config active_window_border_color   0xff026291
yabai -m config normal_window_border_color   0xff022436
yabai -m config insert_window_border_color   0xff012F46

yabai -m config window_opacity off
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 1.0

